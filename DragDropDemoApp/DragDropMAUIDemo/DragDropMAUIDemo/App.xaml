<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DragDropMAUIDemo"
             x:Class="DragDropMAUIDemo.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="Dark">#000000</Color>
            <Style TargetType="Label" x:Key="BaseLabel">
                <Setter Property="FontFamily" Value="ProductSans"/>
                <Setter Property="TextColor" Value="{StaticResource Dark}"/>
            </Style>

            <Style x:Key="MediumBold" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

